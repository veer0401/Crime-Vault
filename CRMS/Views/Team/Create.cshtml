@{
    ViewData["Title"] = "Create Team";
}

<h2>Create a New Team</h2>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="~/js/app-team-create.js"></script> <!-- Your custom JS file -->

<form id="createTeamForm">
    <input type="hidden" name="__RequestVerificationToken" value="@Html.AntiForgeryToken()" /> <!-- CSRF Protection -->

    <div class="form-group">
        <label for="teamName">Team Name</label>
        <input type="text" class="form-control" id="teamName" required>
    </div>

    <div class="form-group">
        <label for="searchUsers">Search Members</label>
        <input type="text" id="searchUsers" class="form-control" placeholder="Search for users...">
    </div>

    <div class="form-group">
        <label for="teamMembers">Select Members</label>
        <div id="userList" class="user-list"></div>
    </div>

    <div class="form-group">
        <label>Selected Members</label>
        <div id="selectedMembers" class="selected-members"></div>
    </div>

    <button type="submit" class="btn btn-primary">Create Team</button>
</form>

<style>
    .user-list {
        max-height: 200px;
        overflow-y: auto;
        border: 1px solid #ccc;
        padding: 10px;
        margin-bottom: 10px;
    }

    .selected-members {
        border: 1px solid #ccc;
        padding: 10px;
        margin-bottom: 10px;
    }

    .user-item {
        display: flex;
        align-items: center;
    }

        .user-item input {
            margin-right: 10px;
        }
</style>


@model IEnumerable<CRMS.Models.Team>
@{
    ViewData["Title"] = "Teams You're Member Of";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="py-3 mb-4">Teams You're Member Of</h4>

    <div class="row g-4">
        @foreach (var team in Model)
        {
            <div class="col-xl-4 col-lg-6 col-md-6">
                <div class="card h-100">
                    <div class="card-header">
                        <div class="d-flex align-items-center justify-content-between">
                            <h5 class="card-title mb-0">@team.Name</h5>
                            <a class="btn btn-primary btn-sm" asp-controller="Team" asp-action="Details" asp-route-id="@team.Id">
                                <i class="ti ti-eye me-1"></i>View Details
                            </a>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="d-flex align-items-center flex-wrap gap-2">
                            <div class="bg-label-primary rounded-2 p-2 mb-2">
                                <i class="ti ti-users ti-md"></i>
                            </div>
                            <h6 class="mb-0">@((team.TeamMembers?.Count ?? 0) + 1) Members</h6>

                        </div>
                        <div class="mt-3">
                            <div class="d-flex align-items-center mb-2">
                                <i class="ti ti-crown me-2"></i>
                                <span>Team Leader: @team.TeamLeader?.FullName</span>
                            </div>
                            <p class="mb-0">Team Code: @team.TeamCode</p>
                        </div>
                        <div class="d-flex justify-content-between mt-3">
                            <a asp-controller="TeamMessage" asp-action="Index" asp-route-teamId="@team.Id" class="btn btn-primary">
                                <i class="ti ti-message-circle me-1"></i> Chat
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
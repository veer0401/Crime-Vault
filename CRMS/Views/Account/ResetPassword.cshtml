@section PageStyles {
    <link rel="stylesheet" href="~/vendor/css/pages/page-auth.css">
}

@section PageScripts {
    <script src="~/js/pages-auth.js"></script>
}

<div class="container-xxl">
    <div class="authentication-wrapper authentication-basic container-p-y">
        <div class="authentication-inner py-6">
            <!-- Reset Password -->
            <div class="card">
                <div class="card-body">
                    <!-- Logo -->
                    <div class="app-brand justify-content-center mb-6">
                        <a href="/" class="app-brand-link">
                            <span class="app-brand-logo demo">@await Html.PartialAsync("../_Partials/_Macros")</span>
                            <span class="app-brand-text demo text-heading fw-bold">@TempData.Peek("appName")</span>
                        </a>
                    </div>
                    <!-- /Logo -->

                    <h4 class="mb-1">Reset Password 🔒</h4>
                    <p class="mb-4"><span class="fw-medium">Your new password must be different from previous passwords.</span></p>

                    <form asp-action="ResetPassword" asp-controller="Account" method="post">
                        @Html.AntiForgeryToken()

                        <input type="hidden" asp-for="Email" />

                        <!-- New Password -->
                        <div class="mb-4 form-password-toggle">
                            <label class="form-label" asp-for="NewPassword"></label>
                            <div class="input-group input-group-merge">
                                <input asp-for="NewPassword" class="form-control" placeholder="Enter new password" />
                                <span class="input-group-text cursor-pointer">
                                    <i class="ti ti-eye-off"></i>
                                </span>
                            </div>
                            <span class="text-danger" asp-validation-for="NewPassword"></span>
                        </div>

                        <!-- Confirm Password -->
                        <div class="mb-4 form-password-toggle">
                            <label class="form-label" asp-for="ConfirmPassword"></label>
                            <div class="input-group input-group-merge">
                                <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm new password" />
                                <span class="input-group-text cursor-pointer">
                                    <i class="ti ti-eye-off"></i>
                                </span>
                            </div>
                            <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                        </div>

                        <!-- Submit Button -->
                        <button type="submit" class="btn btn-primary d-grid w-100 mb-4">
                            Set New Password
                        </button>

                        <div class="text-center">
                            <a asp-action="Login" asp-controller="Account">
                                <i class="ti ti-chevron-left scaleX-n1-rtl me-1_5"></i>
                                Back to Login
                            </a>
                        </div>
                    </form>
                </div>
            </div>
            <!-- /Reset Password -->
        </div>
    </div>
</div>

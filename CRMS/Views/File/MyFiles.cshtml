@model IEnumerable<CRMS.Controllers.FileViewModel>

@{
    ViewData["Title"] = "My Files";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Files /</span> My Files
    </h4>

    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">My Uploaded Files</h5>
            <div>
                <a asp-action="Upload" class="btn btn-primary">
                    <i class="bx bx-plus me-1"></i> Upload New File
                </a>
                <a asp-action="ManageRequests" class="btn btn-warning">
                    <i class="bx bx-user-check me-1"></i> Manage Access Requests
                </a>
            </div>
        </div>
        <div class="table-responsive text-nowrap">
            <table class="table">
                <thead>
                    <tr>
                        <th>File Name</th>
                        <th>Type</th>
                        <th>Size</th>
                        <th>Upload Date</th>
                        <th>Description</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var file in Model)
                    {
                        <tr>
                            <td>@file.FileName</td>
                            <td>@file.FileType</td>
                            <td>@(file.FileSize / 1024) KB</td>
                            <td>@file.UploadDate.ToString("g")</td>
                            <td>@file.Description</td>
                            <td>
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        <a asp-action="ViewFile" asp-route-id="@file.Id" class="dropdown-item">
                                            <i class="bx bx-download me-1"></i> Download
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@file.Id" class="dropdown-item">
                                            <i class="bx bx-edit-alt me-1"></i> Edit
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@file.Id" class="dropdown-item text-danger">
                                            <i class="bx bx-trash me-1"></i> Delete
                                        </a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div> 
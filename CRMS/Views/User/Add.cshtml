    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.all.min.js"></script>
}

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Create New User</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label" for="fullName">Full Name</label>
                        <input type="text" id="fullName" class="form-control" placeholder="Enter full name" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label" for="email">Email</label>
                        <input type="email" id="email" class="form-control" placeholder="Enter email address" required />
                    </div>

                    <div class="mb-4">
                        <label class="form-label">Select Role</label>
                        <div id="roleSelection" class="demo-vertical-spacing">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="role" id="sentinel" value="Sentinel Prime">
                                <label class="form-check-label" for="sentinel">Sentinel Prime</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="role" id="warden" value="Warden">
                                <label class="form-check-label" for="warden">Warden</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="role" id="vanguard" value="Vanguard">
                                <label class="form-check-label" for="vanguard">Vanguard</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="role" id="ghost" value="Ghost">
                                <label class="form-check-label" for="ghost">Ghost</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="role" id="cipher" value="Cipher">
                                <label class="form-check-label" for="cipher">Cipher</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="role" id="tracker" value="Tracker">
                                <label class="form-check-label" for="tracker">Tracker</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="role" id="cadet" value="Cadet">
                                <label class="form-check-label" for="cadet">Cadet</label>
                            </div>
                        </div>
                    </div>

                    <button class="btn btn-primary" onclick="createUser()">Create User</button>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="loadingSpinner" class="spinner-overlay" style="display: none;">
    <div class="sk-grid-cube"></div>
    <div class="sk-grid-cube"></div>
    <div class="sk-grid-cube"></div>
    <div class="sk-grid-cube"></div>

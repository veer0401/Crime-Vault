@model CRMS.Models.Case

@{
    ViewData["Title"] = "Case Details";
    var caseId = Model.Id; // Ensure the case ID is available
}

<h2>@Model.Title</h2>

<div>
    <h4>Case Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @Model.Status
        </dd>
        <dt class="col-sm-2">
            Priority
        </dt>
        <dd class="col-sm-10">
            @Model.Priority
        </dd>
        <dt class="col-sm-2">
            Location
        </dt>
        <dd class="col-sm-10">
            @Model.Location
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@caseId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
@model CRMS.Models.EditModel.EditCriminalViewModel
@using CRMS.Models.EditModel

<div class="modal fade" id="editCriminalModal" tabindex="-1" aria-labelledby="editCriminalModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editCriminalModalLabel">Edit Criminal Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="editCriminalForm" asp-action="UpdateCriminal" method="post">
                <div class="modal-body">
                    <input type="hidden" asp-for="CaseId" />
                    <input type="hidden" asp-for="Id" />
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-control" required />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

            
                            <div class="form-group mb-3">
                                <label asp-for="Role" class="control-label"></label>
                                <input asp-for="Role" class="form-control" required />
                                <span asp-validation-for="Role" class="text-danger"></span>
                            </div>

                    <div class="form-group mb-3">
                        <label asp-for="Role" class="control-label"></label>
                        <input asp-for="Role" class="form-control" required />
                        <span asp-validation-for="Role" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Notes" class="control-label"></label>
                        <textarea asp-for="Notes" class="form-control"></textarea>
                        <span asp-validation-for="Notes" class="text-danger"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save Criminal</button>
                </div>
            </form>
        </div>
    </div>
</div>